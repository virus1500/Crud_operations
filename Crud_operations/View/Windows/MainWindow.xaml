<Window x:Class="Crud_operations.View.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Crud_operations.View.Windows"
        mc:Ignorable="d"
        Title="Товары" MinHeight="720" MinWidth="1280"
        Width="1600" Height="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="10" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="10" />
            </Grid.ColumnDefinitions>


            <Button Name="AddProductBtn" Content="Добавить товар"
                Click="AddProductBtn_Click"/>
            <Button Name="EditProductBtn" Grid.Column="2" Content="Изменить товар"
                Click="EditProductBtn_Click"/>
            <Button Name="RemoveProductBtn" Grid.Column="4"
                Content="Удалить товар" Click="RemoveProductBtn_Click"/>

        </Grid>

        <ListView Name="ProductsLv" Grid.Row="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Изображение" 
                                    DisplayMemberBinding="{Binding Photo}"/>
                    <GridViewColumn Header="Название" 
                                    DisplayMemberBinding="{Binding name}"/>
                    <GridViewColumn Header="Цена" 
                                    DisplayMemberBinding="{Binding price, StringFormat={}{0:C0},
                                      ConverterCulture=ru-RU}"
/>
                    <GridViewColumn Header="Категория" 
                                    DisplayMemberBinding="{Binding Category.name}"/>
                    <GridViewColumn Header="Описание" 
                                    DisplayMemberBinding="{Binding Description}"/>
                    <GridViewColumn Header="Дата" 
                                    DisplayMemberBinding="{Binding ReleaseDate, StringFormat=dd.MM.yyyy}"/>
                    <GridViewColumn Header="Есть ли в наличии" 
                                    DisplayMemberBinding="{Binding IsAvalible}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>