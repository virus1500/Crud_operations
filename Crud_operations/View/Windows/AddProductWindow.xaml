<Window x:Class="Crud_operations.View.Windows.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Crud_operations.View.Windows"
        mc:Ignorable="d"
        Title="AddProductWindow" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Margin="0">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Text="Имя"/>
        <TextBox Grid.Row="0" Grid.Column="2" x:Name="NameTB"/>

        <TextBlock Grid.Row="2" Text="Цена"/>
        <TextBox Grid.Row="2" Grid.Column="2" x:Name="PriceTB"/>

        <TextBlock Grid.Row="4" Text="Категория"/>
        <ComboBox Grid.Row="4" Grid.Column="2" x:Name="CatCmb"/>

        <TextBlock Grid.Row="6" Text="Описание"/>
        <TextBox Grid.Row="6" Grid.Column="2" x:Name="DescriptionTB"/>

        <TextBlock Grid.Row="8" Text="Дата выпуска"/>
        <DatePicker Grid.Row="8" Grid.Column="2" x:Name="DataDP"/>

        <TextBlock Grid.Row="10" Text="Есть на складе"/>
        <CheckBox Grid.Row="10" Grid.Column="2" Name="IsAvailableCB"/>

        <TextBlock Grid.Row="12" Text="Фото"/>
        <TextBox Grid.Row="12" Grid.Column="2" x:Name="PhotoTB"/>
        
        <Button Grid.Row="14" Grid.Column="2" x:Name="LoadBtn" Content="Загрузить" Click="LoadBtn_Click"/>
        <Button Grid.Row="16" Grid.Column="2" x:Name="AddBtn" Content="Добавить товар" Click="AddBtn_Click"/>
    </Grid>
</Window>
